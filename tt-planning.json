{
  "version": 1,
  "name": "TT - Planning",
  "documents": [
    {
      "match": {"type": {"const": "core/planning-item"}},
      "meta": [
        {
          "name": "Slugline",
          "description": "Slug to use as the root for article slugs",
          "declares": {
            "type": "tt/slugline"
          },
          "maxCount": 1,
          "attributes": {
            "value": {
              "labels": ["keyword"],
              "hints": {"alias": ["slug"]}
            }
          }
        },
        {
          "match": {
            "type": {"const":"core/assignment"}
          },
          "meta": [
            {
              "name": "Slugline",
              "description": "Slug to use when publishing an article",
              "declares": {
                "type": "tt/slugline"
              },
              "maxCount": 1,
              "attributes": {
                "value": {
                  "labels": ["keyword"],
                  "hints": {"alias": ["slug"]}
                }
              }
            }
          ]
        }
      ],
      "links": [
        {
          "name": "Article sector",
          "declares": {
            "rel": "sector",
            "type": "tt/sector"
          },
          "maxCount": 1,
          "attributes": {
            "uuid": {},
            "uri": {},
            "title": {},
            "value": {
              "labels": ["keyword"]
            }
          }
        }
      ]
    }
  ]
}
